                    "value": 15,
                    "flex": 1,
                    "validation": [
                        {
                            "type": "MIN",
                            "value": 0,
                            "message": "Age must be at least 0"
                        },
                        {
                            "type": "MAX",
                            "value": 50,
                            "message": "Age must be atleast 50"
                        }
                    ]
                },
                {
                    "key": "height",
                    "type": "FLOAT",
                    "label": "Height (m)",
                    "hint": "Your height in meters",
                    "flex": 1,
                    "validation": [
                        {
                            "type": "MIN",
